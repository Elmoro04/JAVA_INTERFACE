<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mercatopokemon.Gestionale_DB.CardsController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label style="-fx-font-size:16px; -fx-font-weight:bold;" text="Mercato PokÃ©mon" />
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="tfHost" prefWidth="120" promptText="host (es. localhost)" />
            <TextField fx:id="tfPort" prefWidth="70" promptText="port (3306)" />
            <TextField fx:id="tfDatabase" prefWidth="140" promptText="database (mercato_pokemon)" />
            <TextField fx:id="tfUser" prefWidth="100" promptText="user" />
            <PasswordField fx:id="pfPassword" prefWidth="100" promptText="password" />
            <Button fx:id="btnConnect" onAction="#onConnect" text="Connetti" />
        </HBox>
    </top>

    <center>
        <SplitPane orientation="VERTICAL" dividerPositions="0.48">
                <VBox spacing="8">
                    <padding>
                        <Insets top="10" right="10" bottom="6" left="10"/>
                    </padding>

                    <Label text="Elenco Carte" />
                    <TableView fx:id="tableCards" VBox.vgrow="NEVER" prefWidth="860" maxWidth="860" minWidth="860">
                        <columns>
                            <TableColumn fx:id="colNome" prefWidth="200" text="Nome" />
                            <TableColumn fx:id="colCodesp" prefWidth="140" text="Codice Espansione" />
                            <TableColumn fx:id="colEspansione" prefWidth="300" text="Nome Espansione" />
                            <TableColumn fx:id="colNumero" prefWidth="100" text="Numero" />
                            <TableColumn fx:id="colCodL" prefWidth="100" text="Lingua" />
                        </columns>
                    </TableView>
                    <HBox spacing="10">
                        <padding>
                            <Insets top="8" bottom="10"/>
                        </padding>

                        <Button fx:id="btnLoad" disable="true" onAction="#onLoadCards" text="Carica carte"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                        <Button fx:id="AddCard" disable="true" onAction="#cardAdd" text="Aggiungi"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                        <Button fx:id="remCard" disable="true" onAction="#cardRemove" text="Rimuovi"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    </HBox>
                </VBox>

                <HBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label text="Record della carta selezionata" />
                        <TableView fx:id="tableRecords"
                                   VBox.vgrow="NEVER" prefWidth="580" maxWidth="580" minWidth="580">
                            <columns>
                                <TableColumn fx:id="colDataO" prefWidth="140" text="Data"/>
                                <TableColumn fx:id="colPop" prefWidth="140" text="Popolazione"/>
                                <TableColumn fx:id="colMin" prefWidth="140" text="Prezzo Minimo"/>
                                <TableColumn fx:id="colMed" prefWidth="140" text="Prezzo Medio"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <VBox spacing="8" prefWidth="260" >
                        <VBox.margin>
                            <Insets right="20"/>
                        </VBox.margin>
                        <Label text="Anteprima carta" />
                        <ImageView fx:id="imgCardPreview"
                                   fitWidth="220"
                                   fitHeight="310"
                                   preserveRatio="true"
                                   pickOnBounds="true"
                                   style="-fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.35), 8, 0.0, 0, 2);" />
                        <Label fx:id="lblImgInfo" text="Nessuna immagine selezionata" wrapText="true"/>
                    </VBox>
                </HBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="8" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Messaggi:" />
            <Label fx:id="lblStatus" text="Non connesso" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>

</BorderPane>
